@model List<Chef>

<nav>
  <div>
    <h1 class="text-center">Chefs | <a asp-action="AllDishes" asp-controller="Chefs_And_Dishes">Dishes</a></h1>
  </div>
  <a asp-action="NewChefView" asp-controller="Chefs_And_Dishes">Add a Chef</a>
</nav>

<h3>Check out our roster of Chefs</h3>
<hr>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th># of Dishes</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var chef in Model)
    {
      <tr>
        <td>@chef.FirstName @chef.LastName</td>
        <td>@(DateTime.Now.Year - chef.DateOfBirth.Year)</td>
        <td>@chef.CreatedDishes.Count</td>
      </tr>
    }
  </tbody>
</table>
